<hr>
<div>
  <div>
    <h1><%= @the_board.name %></h1>
  </div>
  <div>
    <hr>
    <h2>Add a new post</h2>
    <form action="/insert_post" method="post">
      <div>
        <label for="title_box">
          Title
        </label>
        <input type="text" id="title_box" name="query_title" class="form-control">
      </div>
      <div>
        <label for="body_box">
          Body
        </label>
        <textarea id="body_box" name="query_body" rows="3" class="form-control"></textarea>
      </div>
      <div>
        <label for="expires_on_box">
          Expires on
        </label>
        <input type="date" id="expires_on_box" name="query_expires_on" class="form-control">
      </div>
      <input type="hidden" id="board_id_box" name="query_board_id" value="<%= @the_board.id %>">
      <div class="d-grid">
        <button class="btn btn-primary">
          Add post
        </button>
      </div>
    </form>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>Active posts</h2>
  </div>
  <div>
    <table border="1">
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Posted on</th>
        <th>Expires on</th>
      </tr>
      <% @the_board.active_posts.each do |post| %>
      <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.created_at.strftime("%b, %d %Y") %></td>
          <td><%= post.expires_on.strftime("%b, %d %Y") %></td>
      </tr>
      <% end %>
    </table>
  </div>

  <div>
    <h2>Expired posts</h2>
  </div>
  <div>
    <table border="1">
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Posted on</th>
        <th>Expires on</th>
      </tr>
      <% @the_board.expired_posts.each do |post| %>
      <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.created_at.strftime("%b, %d %Y") %></td>
          <td><%= post.expires_on.strftime("%b, %d %Y") %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
